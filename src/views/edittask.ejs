<%- include ('partials/head.ejs')%>

<%- include ('partials/navigation.ejs')%>

<div class="container p-4">
  <div class="row">
    <div class="col-md-4">
      <form method="POST" action="/edit/<%= myTaskab.id %>" class="card card-body">
        <div class="form-group">
          <label for=" title">Title</label>
          <input type="text" class="form-control" name="title" id="title" value="<%= myTaskab.title %>" aria-describedby="title" autofocus required>
        </div>
        <div class="form-group">
          <label for=" description">Description</label>
          <textarea name="description" id="description" class="form-control" required><%= myTaskab.description %></textarea>
        </div>
        <input type="submit" class="btb btn-warning" value="Update Task">
      </form>
    </div>
  </div>
</div>


<%- include ('partials/footer.ejs')%>